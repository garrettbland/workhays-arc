{
    "name": "workhays-arc",
    "version": "0.0.1",
    "description": "Workhays.com",
    "scripts": {
        "clean": "rimraf .parcel-cache dist",
        "arc-init": "npx arc init",
        "prepare-seeds": "npx ts-node scripts/seeds",
        "dev": "npm run clean && run-p dev:**",
        "dev:arc": "npx arc sandbox",
        "dev:admin": "npx parcel watch",
        "dev:tailwind": "npx tailwindcss -i src/http/get-catchall/src/tailwind.css -o public/style.css -w",
        "build": "npm run clean && run-p build:**",
        "build:admin": "npx parcel build",
        "build:tailwind": "npx tailwindcss -i src/http/get-catchall/src/tailwind.css -o public/style.css --minify",
        "test": "jest",
        "deploy": "npm run build && npx arc deploy --tags project=workhays-staging --verbose",
        "deploy-prod": "npm run build && npx arc deploy --production --tags project=workhays-production --verbose",
        "hydrate": "npx arc hydrate"
    },
    "devDependencies": {
        "@architect/architect": "^10.10.3",
        "@architect/plugin-typescript": "^0.3.0",
        "@faker-js/faker": "^7.6.0",
        "@types/jest": "^29.2.3",
        "@types/react-dom": "^18.0.11",
        "@types/react-helmet": "^6.1.6",
        "esbuild-jest": "^0.5.0",
        "jest": "^29.3.1",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.8.3",
        "prettier": "^2.7.1",
        "process": "^0.11.10",
        "rimraf": "^3.0.2",
        "tailwindcss": "^3.2.7",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3"
    },
    "targets": {
        "admin": {
            "source": "./src/http/get-catchall/src/browser/index.tsx",
            "distDir": "./public"
        }
    },
    "prettier": {
        "semi": false,
        "bracketSpacing": true,
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "trailingComma": "es5"
    }
}
