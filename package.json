{
    "name": "workhays-arc",
    "version": "0.0.0",
    "description": "Workhays.com",
    "scripts": {
        "clean": "rimraf .parcel-cache dist",
        "init": "npx arc init",
        "prepare-seeds": "npx ts-node scripts/seeds",
        "dev": "npm run clean && npm run prepare-seeds && run-p dev:**",
        "dev:arc": "npx arc sandbox",
        "dev:admin": "npx parcel watch",
        "dev:tailwind": "npx tailwindcss -i src/style/tailwind.css -o public/style.css -w",
        "build": "npm run clean && run-p build:**",
        "build:admin": "npx parcel build",
        "build:tailwind": "npx tailwindcss -i src/style/tailwind.css -o dist/style.css --minify",
        "test": "jest"
    },
    "devDependencies": {
        "@architect/architect": "^10.8.0",
        "@architect/plugin-typescript": "^0.3.0",
        "@faker-js/faker": "^7.6.0",
        "@types/jest": "^29.2.3",
        "@types/react": "^18.0.25",
        "@types/react-dom": "^18.0.8",
        "@types/squirrelly": "^7.1.2",
        "esbuild-jest": "^0.5.0",
        "jest": "^29.3.1",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.8.0",
        "prettier": "^2.7.1",
        "process": "^0.11.10",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "rimraf": "^3.0.2",
        "squirrelly": "^8.0.8",
        "tailwindcss": "^3.2.4",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1"
    },
    "targets": {
        "admin": {
            "source": "./src/app/index.tsx",
            "distDir": "./public"
        }
    },
    "prettier": {
        "semi": false,
        "bracketSpacing": true,
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "trailingComma": "es5"
    }
}
