{
    "name": "workhays-arc",
    "version": "0.0.1",
    "description": "Workhays.com",
    "scripts": {
        "arc-init": "npx arc init",
        "prepare-seeds": "npx ts-node scripts/seeds",
        "dev": "npm run prepare-seeds && run-p dev:**",
        "dev:arc": "npx arc sandbox",
        "test": "jest",
        "deploy": "npx arc deploy --tags project=workhays-staging --verbose",
        "deploy-prod": "npx arc deploy --production --tags project=workhays-production --verbose",
        "hydrate": "npx arc hydrate"
    },
    "devDependencies": {
        "@architect/architect": "^10.10.2",
        "@architect/plugin-typescript": "^0.3.0",
        "@faker-js/faker": "^7.6.0",
        "@types/jest": "^29.2.3",
        "esbuild-jest": "^0.5.0",
        "jest": "^29.3.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.7.1",
        "process": "^0.11.10",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3"
    },
    "prettier": {
        "semi": false,
        "bracketSpacing": true,
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "trailingComma": "es5"
    }
}
